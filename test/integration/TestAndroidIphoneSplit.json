{
    "name": "Test Android an iPhone split",
    "useCookies" : false,    
    "cases": [
        {
            "url": "http://localhost:8000/version",
            "verb": "GET",
            "headers": [
                {
                    "key": "User-Agent",
                    "value": "Mozilla/5.0 (Linux; U; Android 4.0; en-us; GT-I9300 Build/IMM76D)"
                }
            ],
            "expect": "b"
        },
        {
            "url": "http://localhost:8000/version",
            "verb": "GET",
            "headers": [
                {
                    "key": "User-Agent",
                    "value": "Mozilla/5.0 (Linux; U; Android 4.0; en-us; GT-I9300 Build/IMM76D)"
                }
            ],
            "expect": "b"
        },        
        {
            "url": "http://localhost:8000/version",
            "verb": "GET",
            "headers": [
                {
                    "key": "User-Agent",
                    "value": "Mozilla/5.0 (iPhone; CPU iPhone OS 8_0 like Mac OS X) AppleWebKit/600.1.3"
                }
            ],
            "expect": "a"
        },
        {
            "url": "http://localhost:8000/version",
            "verb": "GET",
            "headers": [
                {
                    "key": "User-Agent",
                    "value": "Mozilla/5.0 (iPhone; CPU iPhone OS 8_0 like Mac OS X) AppleWebKit/600.1.3"
                }
            ],
            "expect": "a"
        }          
    ],
    "containers": [
        {
            "outPort": 9012,
            "inPort": 8080,
            "name": "monarch_a",
            "image": "magneticio/monarch",
            "parameters": "--version=a"
        },
        {
            "outPort": 9013,
            "inPort": 8080,
            "name": "monarch_b",
            "image": "magneticio/monarch",
            "parameters": "--version=b"
        }
    ],
    "config": {
        "frontends": [],
        "backends": [],
        "routes": [
            {
                "name": "route",
                "port": 8000,
                "protocol": "http",
                "filters": [
                    {
                        "name": "uses_android",
                        "condition": "hdr_sub(user-agent) Android",
                        "destination": "service_b"
                    },
                    {
                        "name": "uses_iphone",
                        "condition": "hdr_sub(user-agent) iPhone",
                        "destination": "service_a"
                    }                    
                ],
                "services": [
                    {
                        "name": "service_a",
                        "weight": 100,
                        "servers": [
                            {
                                "name": "server_1",
                                "host": "192.168.59.103",
                                "port": 9012
                            }
                        ]
                    },
                    {
                        "name": "service_b",
                        "weight": 0,
                        "servers": [
                            {
                                "name": "server_1",
                                "host": "192.168.59.103",
                                "port": 9013
                            }
                        ]
                    }
                ]
            }
        ]
    }
}